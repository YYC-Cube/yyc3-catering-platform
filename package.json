{
  "name": "@yyc3/catering-platform",
  "version": "1.0.0",
  "description": "YYC³餐饮行业智能化平台 - 基于五高五标五化理念的现代化餐饮管理系统",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @yyc3/admin-dashboard dev\" \"pnpm --filter yyc3-catering-api-service dev\"",
    "dev:admin": "pnpm --filter @yyc3/admin-dashboard dev",
    "dev:customer": "pnpm --filter @yyc3/customer-app dev",
    "dev:staff": "pnpm --filter @yyc3/staff-app dev",
    "dev:backend": "pnpm --filter yyc3-catering-api-service dev",
    "dev:all": "concurrently \"pnpm dev:admin\" \"pnpm dev:customer\" \"pnpm dev:staff\" \"pnpm dev:backend\"",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "pnpm --filter \"frontend/*\" build",
    "build:backend": "pnpm --filter \"backend/services/*\" build",
    "preview": "pnpm --filter @yyc3/admin-dashboard preview",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "vitest run --config vitest.unit.config.ts --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --config vitest.unit.config.ts --coverage",
    "test:smoke": "vitest run --config vitest.smoke.config.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:backend": "eslint backend --ext .ts",
    "lint:frontend": "eslint frontend --ext .ts,.tsx",
    "lint:security": "npm audit && eslint backend --ext .ts --plugin security",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:backend": "tsc --noEmit -p backend/tsconfig.json",
    "type-check:frontend": "tsc --noEmit -p frontend/tsconfig.json",
    "clean": "rm -rf node_modules dist coverage",
    "clean:deps": "rm -rf node_modules **/node_modules",
    "clean:build": "rm -rf dist **/dist",
    "db:migrate": "pnpm --filter yyc3-catering-api-service migrate",
    "db:migrate:rollback": "pnpm --filter yyc3-catering-api-service migrate:rollback",
    "db:seed": "pnpm --filter yyc3-catering-api-service seed",
    "db:backup": "pnpm --filter yyc3-catering-api-service backup",
    "db:restore": "pnpm --filter yyc3-catering-api-service restore",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:dev": "pnpm build && helm upgrade --install yyc3-catering ./helm --namespace yyc3-dev --create-namespace --set environment=development",
    "deploy:prod": "pnpm build && helm upgrade --install yyc3-catering ./helm --namespace yyc3-prod --create-namespace --set environment=production",
    "prepare": "husky install",
    "postinstall": "node scripts/setup-env.js"
  },
  "workspaces": [
    "frontend/*",
    "backend/services/*",
    "agentic-core"
  ],
  "keywords": [
    "yyc3",
    "catering",
    "smart-platform",
    "cloud-cube",
    "餐饮平台",
    "智能厨房",
    "多模态AI",
    "Vue3",
    "Node.js",
    "Express",
    "TypeScript"
  ],
  "author": "YYC³ <admin@0379.email>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yyc3/catering-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yyc3/catering-platform/issues"
  },
  "homepage": "https://yyc3.com",
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.9.0",
    "joi": "^18.0.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "kafka-node": "^5.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.11",
    "openai": "^6.16.0",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "playwright": "^1.40.1",
    "prettier": "^3.8.0",
    "rimraf": "^6.1.2",
    "sqlite3": "^5.1.7",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}