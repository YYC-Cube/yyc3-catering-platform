# YYC³ API服务环境配置
# 服务配置
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
APP_NAME=yyc3-api-service
APP_VERSION=1.0.0

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/yyc3_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=yyc3_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_db_password
DATABASE_SSL=false
DB_CONNECTION_LIMIT=10
DB_IDLE_TIMEOUT=30000
DB_MAX_LIFETIME=600000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT认证配置
# SECURITY: Must be at least 32 characters. Use a cryptographically secure random string.
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API限流配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@0379.love

# 外部服务配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
ALIYUN_ACCESS_KEY=your-aliyun-access-key
ALIYUN_SECRET_KEY=your-aliyun-secret-key

# 监控配置
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# 安全配置
CORS_ORIGINS=http://localhost:3000,https://admin.0379.love,https://restaurant.0379.love
ENABLE_CSP=true
ENABLE_HSTS=true