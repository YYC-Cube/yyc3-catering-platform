# API网关环境变量配置示例

# 服务配置
NODE_ENV=development
PORT=3200
SERVICE_NAME=api-gateway

# CORS配置
# SECURITY: Never use wildcard (*) in production. List specific allowed origins.
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Redis缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CACHE_DB=0
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# Kafka消息队列配置
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=api-gateway
KAFKA_GROUP_ID=api-gateway-group

# 微服务URL配置
USER_SERVICE_URL=http://localhost:3201
RESTAURANT_SERVICE_URL=http://localhost:3202
ORDER_SERVICE_URL=http://localhost:3203
PAYMENT_SERVICE_URL=http://localhost:3204
DELIVERY_SERVICE_URL=http://localhost:3205
NOTIFICATION_SERVICE_URL=http://localhost:3206
ANALYTICS_SERVICE_URL=http://localhost:3207

# 服务注册与发现
CONSUL_HOST=localhost
CONSUL_PORT=8500

# 配置中心
NACOS_HOST=localhost
NACOS_PORT=8848

# JWT认证配置
# SECURITY: Must be at least 32 characters. Use a cryptographically secure random string.
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=24h

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 健康检查配置
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_FAILURE_THRESHOLD=3
